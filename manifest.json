{
    "name": "GitHub Chat",
    "description": "",
    "version": "0.0.0.1",
    "manifest_version": 2,
    "icons": {
        "256": "logo256.png",
        "128": "logo128.png",
        "64": "logo64.png",
        "32": "logo32.png",
        "16": "logo16.png"
    },

    "page_action": {
        "default_icon": "logo16.png",
        "default_popup": "popup.html",
        "default_title": "GitHub Chat"
    },

    "background": {
        "page": "background.html"
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["contentScript.js"],
            "run_at": "document_end"
        }
    ],

    "content_security_policy": "script-src 'self' https://; object-src 'self'",

    "permissions": [
        "tabs", "http://www.github.com/*"
    ]
}
