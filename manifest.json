{
    "manifest_version": 2,
    "name": "GitHub Chat",
    "version": "0.0.2.0", //per autoupdate

    //"default_locale": "it",

    "description": "For instant messaging in GitHub projects",
    "icons": {
        "256": "images/logo256.png",
        "128": "images/logo128.png",
        "64": "images/logo64.png",
        "32": "images/logo32.png",
        "16": "images/logo16.png"


    },

    "page_action": {
        "default_icon": "images/logo16.png",
        "default_popup": "popup.html",
        "default_title": "GitHub Chat"
    },
    "author":"Luciano Quercia, Raimondi Vincenzo",


"background": {
"page": "background.html"
},

   // "incognito": "split", //// per test

"content_scripts": [
{
    "matches": ["*://*/*"],
    "js": ["contentScript.js"],
    "run_at": "document_end"
}
],

"content_security_policy": "script-src 'self' https://; object-src 'self'",


"permissions": [
    "tabs",
    //"unlimitedStorage",
    "http://www.github.com/*",
    "https://github.com/*"

]
}
